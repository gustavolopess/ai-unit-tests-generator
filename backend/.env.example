# Backend Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# SERVER
# =============================================================================
# Port the server will listen on
PORT=3000

# Environment (development, production, test)
NODE_ENV=development

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# =============================================================================
# DATABASE
# =============================================================================
# Path to SQLite database file
DATABASE_PATH=data/github-coverage.db

# =============================================================================
# COVERAGE ANALYSIS
# =============================================================================
# Coverage threshold percentage (files below this are flagged for improvement)
COVERAGE_THRESHOLD=80

# =============================================================================
# JOB PROCESSING
# =============================================================================
# Directory for job log files
LOGS_DIR=data/logs

# Lock timeout in milliseconds (default: 30 minutes)
# After this time, stale locks will be automatically cleaned up
LOCK_TIMEOUT_MS=1800000
